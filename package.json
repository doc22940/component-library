{
  "name": "telenor-component-library",
  "version": "0.1.2",
  "description": "Component library for components used throughout Telenor",
  "main": "index.js",
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "release": "standard-version",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "release:patch": "npm run release -- --release-as patch",
    "start": "gulp",
    "test": "npm run test:stylelint",
    "test:stylelint": "stylelint components/**/*.scss",
    "watch": "gulp tn-styleguide:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TelenorFrontend/component-library.git"
  },
  "author": "frontend@telenordigital.com",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/TelenorFrontend/component-library/issues"
  },
  "homepage": "https://github.com/TelenorFrontend/component-library#readme",
  "devDependencies": {
    "eslint": "^4.1.1",
    "gulp": "^3.9.1",
    "gulp-connect": "^5.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-stylelint": "^3.9.0",
    "husky": "^0.14.1",
    "nucleus-styleguide": "^1.1.1",
    "sass-lint": "^1.10.2",
    "standard-version": "^4.2.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.5.0",
    "stylelint-scss": "^1.5.1",
    "tn-conventions": "git+https://github.com/TelenorFrontend/conventions.git",
    "validate-commit-msg": "^2.12.2"
  }
}
